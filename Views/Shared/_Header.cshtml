@* ESTE É O NAVBAR E O HEADER COMPLETO DO SITE, COMPARTILHADO ENTRE TELAS. *@
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<link rel="stylesheet" href="~/header.css" asp-append-version="true" />

<section class="header1"></section>

<section class="header2">
    <a asp-controller="Principal" asp-action="Index">
        <img id="Logo" src="https://www.senaibahia.com.br/wp-content/themes/senai/assets/images/senailogo_nova.png"
            alt="">
    </a>

    <nav class="menu">
        <button class="menu-toggle" id="menuToggle">
            <img src="/IMG/Hamburger_icon.svg.png" alt="Menu" style="height:32px;width:32px;">
        </button>
        <div class="menu-items" id="menuItems">
            <a class="menu-item" asp-controller="Principal" asp-action="Index">Início</a>
            <button class="menu-item">Institucional</button>
            <button class="menu-item">Para Você</button>
            <button class="menu-item">Fale Conosco</button>
            
            @if (SignInManager.IsSignedIn(User))
            {
                <span class="menu-item" style="color: #1565c0;">@User.Identity.Name</span>
                <form asp-controller="Account" asp-action="Logout" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="menu-item" style="background: none; border: none; color: rgb(56, 56, 56); cursor: pointer;">Sair</button>
                </form>
            }
            else
            {
                <a class="menu-item" asp-controller="Account" asp-action="Login">Entrar</a>
            }
        </div>
    </nav>
</section>

@* FUNÇÃO DO NAVBAR RESPONSIVO *@
<script>
    document.getElementById('menuToggle').onclick = function () {
        document.getElementById('menuItems').classList.toggle('open');
    };
</script>