@model Projeto_Dotnet8.Models.ViewModel.CriarMensagem
@{
    ViewData["Title"] = "Criar Solicitação";
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/criarSolicitacao.css" />
    <link rel="stylesheet" href="~/css/problemasRecorrentes.css" />
    <link rel="stylesheet" href="~/css/header.css" />
</head>

<body>
    <partial name="_Header" />

    <div class="titulo">
        <div class="bg1">
            <h1>Criar Solicitação</h1>
        </div>
        <div class="bg2"></div>
    </div>

    <section class="container">
        @if (TempData["Sucesso"] != null)
        {
            <div class="alert alert-success">
                <span class="alert-icon">✓</span>
                @TempData["Sucesso"]
            </div>
        }
        
        @if (TempData["Erro"] != null)
        {
            <div class="alert alert-error">
                <span class="alert-icon">✗</span>
                @TempData["Erro"]
            </div>
        }

        <div class="solicitacao-card">
            <div class="card-header">
                <span class="header-icon">📝</span>
                <h2>Nova Solicitação de Suporte</h2>
            </div>

            <form asp-controller="Principal" asp-action="Criar" method="post" id="formSolicitacao">
                <!-- Passo 1: Seleção da Sala -->
                <div class="form-step active" id="step-sala">
                    <div class="step-header">
                        <span class="step-number">1</span>
                        <h3>Selecione a Sala</h3>
                    </div>
                    
                    <div class="form-group">
                        <label for="salaSelect">
                            <span class="label-icon">🏫</span>
                            Sala
                        </label>
                        <div class="select-wrapper">
                            <select asp-for="SalaId" class="form-control" id="salaSelect" required>
                                <option value="0">Escolha uma sala</option>
                                @foreach (var sala in Model.Salas)
                                {
                                    <option value="@sala.ID" selected="@(Model.SalaId == sala.ID)">@sala.Sala_Num</option>
                                }
                            </select>
                            <span class="select-arrow">▼</span>
                        </div>
                        <span class="form-hint">Selecione a sala onde o problema está ocorrendo</span>
                    </div>

                    <div class="button-group">
                        <button type="button" class="btn btn-primary" id="btnProximoSala" disabled>
                            Próximo
                            <span class="btn-icon">→</span>
                        </button>
                        <a asp-controller="Principal" asp-action="Index" class="btn btn-secondary">
                            <span class="btn-icon">←</span>
                            Voltar
                        </a>
                    </div>
                </div>

                <!-- Passo 2: Seleção do Computador -->
                <div class="form-step" id="step-computador">
                    <div class="step-header">
                        <span class="step-number">2</span>
                        <h3>Selecione o Computador</h3>
                    </div>

                    <div id="computadores-lista" class="computadores-grid">
                        @if (Model.Computadores != null && Model.Computadores.Any())
                        {
                            @foreach (var computador in Model.Computadores)
                            {
                                <div class="computador-card" data-id="@computador.ID">
                                    <input type="radio" name="ComputadorId" value="@computador.ID" id="pc-@computador.ID" 
                                           checked="@(Model.ComputadorId == computador.ID)" required />
                                    <label for="pc-@computador.ID">
                                        <span class="pc-icon">💻</span>
                                        <strong>@computador.Nome</strong>
                                        <small>ID: @computador.ID</small>
                                    </label>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="sem-computadores">
                                <p>Nenhum computador cadastrado nesta sala.</p>
                            </div>
                        }
                    </div>

                    <div class="button-group">
                        <button type="button" class="btn btn-secondary" id="btnVoltarSala">
                            <span class="btn-icon">←</span>
                            Voltar
                        </button>
                        <button type="button" class="btn btn-primary" id="btnProximoComputador" disabled>
                            Próximo
                            <span class="btn-icon">→</span>
                        </button>
                    </div>
                </div>

                <!-- Passo 3: Descrição do Problema -->
                <div class="form-step" id="step-mensagem">
                    <div class="step-header">
                        <span class="step-number">3</span>
                        <h3>Descreva o Problema</h3>
                    </div>

                    <!-- NOVO: Problemas Recorrentes -->
                    <div class="form-group">
                        <label>
                            <span class="label-icon">⚡</span>
                            Problemas Recorrentes
                        </label>
                        <div class="problemas-recorrentes">
                            <div class="problema-item">
                                <input type="checkbox" id="prob1" name="ProblemaRecorrente" value="Computador não liga" />
                                <label for="prob1">Computador não liga</label>
                            </div>
                            <div class="problema-item">
                                <input type="checkbox" id="prob2" name="ProblemaRecorrente" value="Mouse ou teclado não funciona" />
                                <label for="prob2">Mouse ou teclado não funciona</label>
                            </div>
                            <div class="problema-item">
                                <input type="checkbox" id="prob3" name="ProblemaRecorrente" value="Monitor sem imagem" />
                                <label for="prob3">Monitor sem imagem</label>
                            </div>
                            <div class="problema-item">
                                <input type="checkbox" id="prob4" name="ProblemaRecorrente" value="Computador muito lento" />
                                <label for="prob4">Computador muito lento</label>
                            </div>
                            <div class="problema-item">
                                <input type="checkbox" id="prob5" name="ProblemaRecorrente" value="Sem acesso à internet" />
                                <label for="prob5">Sem acesso à internet</label>
                            </div>
                            <div class="problema-item">
                                <input type="checkbox" id="prob6" name="ProblemaRecorrente" value="Software não abre/trava" />
                                <label for="prob6">Software não abre/trava</label>
                            </div>
                        </div>
                        <span class="form-hint">Selecione um ou mais problemas comuns (opcional)</span>
                    </div>

                    <!-- Área de Mensagem Personalizada -->
                    <div class="form-group">
                        <label for="mensagemTextarea">
                            <span class="label-icon">📄</span>
                            Descrição Adicional do Problema
                        </label>
                        <textarea 
                            asp-for="Mensagem" 
                            class="form-control" 
                            id="mensagemTextarea"
                            rows="8"
                            placeholder="Adicione detalhes adicionais se necessário..."
                        >@Model.Mensagem</textarea>
                        <span class="form-hint" id="mensagemHint">Campo opcional quando problemas recorrentes são selecionados</span>
                    </div>

                    <div class="resumo-solicitacao">
                        <h4>Resumo da Solicitação:</h4>
                        <div class="resumo-item">
                            <strong>Sala:</strong> <span id="resumo-sala">-</span>
                        </div>
                        <div class="resumo-item">
                            <strong>Computador:</strong> <span id="resumo-computador">-</span>
                        </div>
                        <div class="resumo-item" id="resumo-problemas-container" style="display: none;">
                            <strong>Problemas:</strong> <span id="resumo-problemas">-</span>
                        </div>
                    </div>

                    <div class="button-group">
                        <button type="button" class="btn btn-secondary" id="btnVoltarComputador">
                            <span class="btn-icon">←</span>
                            Voltar
                        </button>
                        <button type="submit" class="btn btn-success" id="btnEnviar" disabled>
                            <span class="btn-icon">✓</span>
                            Enviar Solicitação
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </section>

    <script src="~/js/criarSolicitacao.js"></script>
</body>
</html>