@model Projeto_Dotnet8.Models.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/header.css" />
    <link rel="stylesheet" href="/css/login.css">
    <title>Login - Sistema SENAI</title>
</head>

<body>
    <partial name="_Header" />

    <main class="login-container">
        <div class="login-box">
            <h2>Acesse sua conta</h2>
            
            @if (TempData["Sucesso"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Sucesso"]
                </div>
            }
            
            <form asp-controller="Principal" asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="input-group">
                    <label asp-for="RU">Registro do Aluno (RU)</label>
                    <input asp-for="RU" type="text" maxlength="10" placeholder="Digite seu RU (10 dígitos)" required>
                    <span asp-validation-for="RU" class="text-danger"></span>
                </div>
                
                <div class="input-group">
                    <label asp-for="Password">Senha</label>
                    <input asp-for="Password" type="password" placeholder="Digite sua senha" required>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                
                <div class="input-group checkbox-group">
                    <label>
                        <input asp-for="RememberMe" type="checkbox"> Lembrar-me
                    </label>
                </div>
                
                <button type="submit" class="btn-login">Entrar</button>
            </form>

            <p class="extra">
                <a href="#">Esqueceu sua senha?</a>
            </p>
            
            <!-- Link para cadastro (remova se não quiser permitir auto-cadastro) -->
            <p class="extra">
                Não tem conta? <a asp-controller="Account" asp-action="Register">Cadastre-se aqui</a>
            </p>
        </div>
    </main>
    
    <footer></footer>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>

</html>
