@model Projeto_Dotnet8.Models.ComputadorModels

@{
    ViewData["Title"] = "Detalhes do Computador";
    var totalNotificacoes = Model.Mensagens?.Count ?? 0;
    var notificacoesAbertas = Model.Mensagens?.Count(m => m.Status == 0) ?? 0;
    var notificacoesAndamento = Model.Mensagens?.Count(m => m.Status == 1) ?? 0;
    var notificacoesResolvidas = Model.Mensagens?.Count(m => m.Status == 2) ?? 0;
    
    string contadorClass = "ok";
    if (notificacoesAbertas > 5 || notificacoesAndamento > 3)
    {
        contadorClass = "urgente";
    }
    else if (notificacoesAbertas > 2 || notificacoesAndamento > 0)
    {
        contadorClass = "alerta";
    }
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/detalhesComputador.css" />
    <link rel="stylesheet" href="~/css/header.css" />
</head>

<body>
    <partial name="_HeaderADM" />

    <div class="titulo">
        <div class="bg1">
            <h1>Detalhes do Computador</h1>
        </div>
        <div class="bg2"></div>
    </div>

    <section class="container">
        <div class="computador-card">
            <div class="computador-header">
                <div class="header-info">
                    <h2>Computador</h2>
                    <div class="info-linha">
                        <span class="info-label">Nome:</span>
                        <span class="info-valor">@Model.Nome</span>
                    </div>
                    <div class="info-linha">
                        <span class="info-label">ID:</span>
                        <span class="info-valor">@Model.ID</span>
                    </div>

                    <!-- CONTADOR DE NOTIFICAÃ‡Ã•ES -->
                    <div class="contador-notificacoes @contadorClass">
                        <span class="contador-icon"></span>
                        <div>
                            <span class="contador-numero">@totalNotificacoes</span>
                            <span class="contador-texto">notificaÃ§@(totalNotificacoes == 1 ? "Ã£o" : "Ãµes")</span>
                        </div>
                    </div>

                    @if (totalNotificacoes > 0)
                    {
                        <div class="status-breakdown">
                            @if (notificacoesAbertas > 0)
                            {
                                <div class="status-item" style="background: rgba(255, 107, 107, 0.3);">
                                    <span class="status-item-icon">ðŸ”´</span>
                                    <span>@notificacoesAbertas Em Aberto</span>
                                </div>
                            }
                            @if (notificacoesAndamento > 0)
                            {
                                <div class="status-item" style="background: rgba(255, 165, 2, 0.3);">
                                    <span class="status-item-icon">ðŸŸ¡</span>
                                    <span>@notificacoesAndamento Em Andamento</span>
                                </div>
                            }
                            @if (notificacoesResolvidas > 0)
                            {
                                <div class="status-item" style="background: rgba(76, 175, 80, 0.3);">
                                    <span class="status-item-icon">ðŸŸ¢</span>
                                    <span>@notificacoesResolvidas Resolvidas</span>
                                </div>
                            }
                        </div>
                    }
                </div>
                
                <div class="status-container">
                    <span class="status-label">Status:</span>
                    @if (Model.Mensagens != null && Model.Mensagens.Any())
                    {
                        <span class="status-indicator status-problema"></span>
                    }
                    else
                    {
                        <span class="status-indicator status-ok"></span>
                    }
                </div>
            </div>

            <div class="notificacoes-lista">
                @if (Model.Mensagens != null && Model.Mensagens.Any())
                {
                    foreach (var mensagem in Model.Mensagens)
                    {
                        <div class="notificacao-item">
                            <button class="notificacao-header" onclick="toggleNotificacao(this)">
                                <div class="notificacao-info">
                                    <span class="aluno-nome">
                                        ðŸ‘¤ @(mensagem.Usuario?.NomeCompleto ?? "UsuÃ¡rio nÃ£o identificado")
                                        @if (!string.IsNullOrEmpty(mensagem.Usuario?.RU))
                                        {
                                            <span style="font-weight: normal; font-size: 14px; color: #666;"> (RU: @mensagem.Usuario.RU)</span>
                                        }
                                    </span>
                                    <span class="notificacao-data">
                                        ðŸ“… @mensagem.DataCriacao.ToString("dd/MM/yyyy HH:mm")
                                    </span>
                                </div>
                                
                                <div class="header-status-container">
                                    @if (mensagem.Status == 0)
                                    {
                                        <span class="status-badge-header status-0">
                                            <span class="status-icon">ðŸ”´</span>
                                            Em Aberto
                                        </span>
                                    }
                                    else if (mensagem.Status == 1)
                                    {
                                        <span class="status-badge-header status-1">
                                            <span class="status-icon">ðŸŸ¡</span>
                                            Em Andamento
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="status-badge-header status-2">
                                            <span class="status-icon">ðŸŸ¢</span>
                                            Resolvido
                                        </span>
                                    }
                                    <span class="arrow-icon">â–¼</span>
                                </div>
                            </button>
                            <div class="notificacao-conteudo">
                                <div class="mensagem-box">
                                    <p>@mensagem.Texto</p>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="sem-notificacoes">
                        <p>Nenhuma notificaÃ§Ã£o registrada para este computador.</p>
                    </div>
                }
            </div>

            <div class="botoes-container">
                <a asp-controller="Principal" asp-action="Salas" id="voltar">Voltar</a>
            </div>
        </div>
    </section>

    <footer></footer>

    <script>
        function toggleNotificacao(button) {
            const conteudo = button.nextElementSibling;
            const arrow = button.querySelector('.arrow-icon');
            
            if (conteudo.classList.contains('open')) {
                conteudo.classList.remove('open');
                arrow.style.transform = 'rotate(0deg)';
                button.classList.remove('active');
            } else {
                conteudo.classList.add('open');
                arrow.style.transform = 'rotate(180deg)';
                button.classList.add('active');
            }
        }
    </script>
</body>
</html>