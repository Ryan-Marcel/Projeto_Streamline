@model Projeto_Dotnet8.Models.ViewModel.CriarMensagem
@{
    ViewData["Title"] = "Criar Solicitação";
}

<head>
    <script>
        function toggleMensagemForm(id) {
            var form = document.getElementById('mensagem-form-' + id);
            var img = document.getElementById('chevron-img-' + id);
            if (form.classList.contains('open')) {
                form.classList.remove('open');
                if (img) img.src = '/IMG/chevron.png';
            } else {
                form.classList.add('open');
                if (img) img.src = '/IMG/up-arrows.png';
            }
        }
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/solicitacao.css" />
    <link rel="stylesheet" href="~/css/header.css" />
</head>

<partial name="_Header" />

<body>
    <div class="titulo">
        <h1>Criar Solicitação</h1>
    </div>

    <section class="container">
        <section class="computers-list">
        @if (Model.Computadores != null && Model.Computadores.Any())
        {
            <h3>Computadores:</h3>
            <ul>
                @foreach (var computador in Model.Computadores)
                {
                    <li>
                        <button type="button" id="computador" onclick="toggleMensagemForm(@computador.ID)">
                            Nome: @computador.Nome
                            <img id="chevron-img-@computador.ID" src="/IMG/chevron.png" alt="">
                        </button>
                        <div id="mensagem-form-@computador.ID" class="mensagem-form">
                            <form asp-action="Solicitacao" asp-controller="Principal" method="post">
                                <input type="hidden" name="SalaId" value="@Model.SalaId" />
                                <input type="hidden" name="ComputadorId" value="@computador.ID" />
                                <textarea name="Mensagem" rows="3" cols="30" placeholder="Digite sua mensagem..." required></textarea><br />
                                <button type="submit">Enviar Mensagem</button>
                            </form>
                        </div>
                    </li>
                }
            </ul>
        }
        </section>
    </section>
</body>
</html>