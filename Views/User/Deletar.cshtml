@model Projeto_Dotnet8.Models.Entities.ComputadorModels
@{
    ViewData["Title"] = "Confirmar Deletar";
}

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/deletar.css" />
    <link rel="stylesheet" href="~/css/header.css" />


</head>


<body>

    <partial name="_Header" />

    <section class="container">
        @* Processo de exclusão do Pc do Banco De Dados *@
        <h2>Confirmar Deletar</h2>
        
        <p>Você tem certeza que deseja deletar o Computador: @Model.Nome?</p>

        <form asp-action="Deletar" method="post">
            <input type="hidden" asp-for="ID" />
            <button type="submit" class="btn btn-success">Sim</button>
            <a asp-controller="Principal" asp-action="Editar" class="btn btn-danger">Não</a>
        </form>
    </section>
</body>